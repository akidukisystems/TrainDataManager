<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.Group?>

<BorderPane 
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="jp.akidukisystems.software.TrainDataClient.GUI.TIMS.Screen.Controller.UD01AB"
    style="-fx-background-color: black;"
>

    <top>
        <AnchorPane prefHeight="70" style="-fx-background-color: #000000;">
            <!-- 初期選択 -->
            <Button
                fx:id="btnS00AB"
                text=""
                styleClass="normal-button, tims-button, button-tight"
                prefWidth="60"
                prefHeight="60"
                AnchorPane.rightAnchor="5"
                AnchorPane.topAnchor="5"
            />
        </AnchorPane>
    </top>

    <center>
        <AnchorPane
            style="-fx-background-color: #2f3e56;"
            AnchorPane.topAnchor="0"
            AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0"
            AnchorPane.bottomAnchor="0"
        >

            <!-- 左上の画面コード -->
            <Label
                text="UD01AB"
                layoutX="25"
                layoutY="10"
                styleClass="screen-code"
            />

            <!-- タイトル -->
            <Label
                fx:id="title"
                text="仕業カード読込"
                layoutX="96"
                layoutY="10"
                styleClass="title"
            />

            <Label
                fx:id="result"
                text="読込中..."
                layoutX="25"
                layoutY="60"
                styleClass="plane-text"
            />

            <Button
                fx:id="btnX1"
                text=""
                styleClass="normal-button, tims-button"
                prefWidth="155"
                prefHeight="50"
                AnchorPane.rightAnchor="5"
                AnchorPane.bottomAnchor="5"
            />
        </AnchorPane>
    </center>


    <bottom>
        <AnchorPane prefHeight="100" style="-fx-background-color: #000000;">
            <!-- ステータスバーやスライダーを置く領域 -->
            <Button
                fx:id="btnD00AA"
                text=""
                styleClass="normal-button, tims-button, button-tight"
                prefWidth="100"
                prefHeight="60"
                AnchorPane.leftAnchor="5"
            />
            <Button
                fx:id="btnD01AA"
                text=""
                styleClass="normal-button, tims-button, button-tight"
                prefWidth="100"
                prefHeight="60"
                AnchorPane.leftAnchor="110"
            />
        </AnchorPane>
    </bottom>
</BorderPane>