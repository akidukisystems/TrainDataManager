<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.Group?>

<BorderPane 
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="jp.akidukisystems.software.TrainDataClient.GUI.TIMS.Screen.Controller.UA01AA"
    style="-fx-background-color: black;"
>

    <top>
        <AnchorPane prefHeight="54" style="-fx-background-color: #000000;">
            <!-- 初期選択 -->
            <Button
                fx:id="btnS00AB"
                text=""
                styleClass="normal-button, tims-button, button-tight"
                prefWidth="50"
                prefHeight="50"
                AnchorPane.rightAnchor="1"
                AnchorPane.topAnchor="1"
            />
        </AnchorPane>
    </top>

    <center>
        <AnchorPane
            style="-fx-background-color: #2f3e56;"
            AnchorPane.topAnchor="0"
            AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0"
            AnchorPane.bottomAnchor="0"
        >

            <!-- 左上の画面コード -->
            <Label
                text="UA01AA"
                layoutX="25"
                layoutY="10"
                styleClass="screen-code"
            />

            <!-- タイトル -->
            <Label
                fx:id="title"
                text="一般情報"
                layoutX="96"
                layoutY="10"
                styleClass="title"
            />
            
            <Label
                fx:id="speed"
                text=""
                layoutX="30"
                layoutY="30"
                styleClass="plane-text"
            />

            <Label
                fx:id="move"
                text=""
                layoutX="30"
                layoutY="60"
                styleClass="plane-text"
            />
        </AnchorPane>
    </center>


    <bottom>
        <AnchorPane prefHeight="96" style="-fx-background-color: #000000;">
            <!-- ステータスバーやスライダーを置く領域 -->
            <Button
                fx:id="btnUA00AA"
                text=""
                styleClass="normal-button, tims-button, button-tight"
                prefWidth="75"
                prefHeight="50"
                AnchorPane.leftAnchor="5"
            />
        </AnchorPane>
    </bottom>
</BorderPane>